
@model List<CourseStatus>
<h2>Course Status</h2>



@foreach (var item in Model){
   <table class="table table-striped">
    <thead>
        <tr>
            <th>Cart</th>
            <th>Bag</th>
            <th>Trundler</th>
            <th>Course Status</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@(item.Cart ? "YES" : "NO")</td>
            <td>@(item.Bag ? "YES" : "NO")</td>
            <td>@(item.Trundler ? "YES" : "NO")</td>
            <td>@(item.IsCourseOpen ? "OPEN" : "CLOSE")</td>
            <td>@(string.IsNullOrEmpty(item.Notes) ? "No Notes" : item.Notes)</td>
            <td>
                <a asp-controller="CourseStatus" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
            </td>
        </tr>
    </tbody>
    </table>

}